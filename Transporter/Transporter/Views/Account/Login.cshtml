@model LoginViewModel



<div class="container mt-5">
    <div class="col-sm-offset-2">
        <h1 class="text-info mb-3">Login</h1>
        <form asp-controller="Account" asp-action="Login" method="post" role="form">
            <h4>Login to your acount</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="col-md-2 form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            </div>



            <div class="form-group mt-2">
                <label asp-for="Password" class="col-md-2 form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
            </div>

           
                <div class="col-sm-offset-2 col-md-2">
                    <button type="submit" class="btn btn-success form-control">Login</button>
                </div>

           
        </form>

    </div>
    
</div>

