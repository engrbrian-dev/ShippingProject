@model string

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Shipment Tracking</h4>
                    </div>
                    <div class="content">
                        <form asp-action="track" asp-controller="Home" method="post">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Tracking Number</label>
                                        <input type="text" asp-for="" class="form-control" placeholder="Tracking Number">
                                    </div>
                                </div>
                            </div>
                            


                            <button type="submit" class="btn btn-info btn-fill pull-right">Track Shipment</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
